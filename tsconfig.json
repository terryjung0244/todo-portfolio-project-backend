{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./build",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  }
}
